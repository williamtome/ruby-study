<h1>New product</h1>

<%= form_with model: @product do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <br>
  <div>
    <%= form.label :price %><br>
    <%= form.text_field :price %>
  </div>

  <br>
  <div>
    <%= form.label :active %>
    <%= form.check_box :active %>
  </div>

  <br>
  <div>
    <%= form.submit %>
  </div>
<% end %>